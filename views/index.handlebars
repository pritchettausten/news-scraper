<div class="hero-image">
    <div class="hero-text">
        <h1>Mongo Scraper</h1>
        <p>See What's Up</p>
    </div>
</div>

<div class="row">
    <div class="col s12 cards-container">
    
        {{#each articles}}
            {{!-- <div class="row"> --}}
                <div class="col s12 m12">
                    <div class="card">
                        <div class="card-action">
                            <a href="{{this.link}}" style="color: white;">{{this.title}}</a>
                            <a class="addBtn right">
                                <i class="material-icons noteBtn" style="color: rgb(183, 218, 172);">add_circle</i>
                            </a>
                        </div>
                        <div class="card-content">
                            <p>{{this.sum}} <a href="{{this.link}}">keep reading</a></p>
                        </div>
                    </div>
                </div>
            {{!-- </div> --}}
        {{/each}}
    
    </div>
</div>

